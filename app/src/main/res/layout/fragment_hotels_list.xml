<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:validation="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="androidx.lifecycle.LiveData" />



        <import type="kotlin.jvm.functions.Function0" />
        <import type="com.rinho.databinding_validation.CommonPatterns" />
        <import type="kotlin.Unit" />
        <import type="androidx.lifecycle.MutableLiveData" />



        <variable
            name="accountbalanceStr"
            type="MutableLiveData&lt;String>" />
        <variable
            name="accountnameStr"
            type="MutableLiveData&lt;String>" />
        <variable
                       name="hotelDetails"
                     type="com.rinho.payment.models.Details1" />



                </data>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">


                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:background="@drawable/rounded_toolbar"
                        android:elevation="@dimen/shadow_default"

                        app:layout_constraintTop_toTopOf="parent"

                        android:backgroundTint="@color/color_147eb0"

                        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                        app:title="@string/new_account"
                        app:titleTextColor="@android:color/white"

                        />
                    <LinearLayout

                        app:layout_constraintTop_toBottomOf="@id/toolbar"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/account_name">
                        <TextView
                            android:layout_gravity="center"
                            android:text="Account Name    "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <com.google.android.material.textfield.TextInputLayout

                            android:id="@+id/et_account_name_container"
                            style="@style/TextInputLayout.TransparentWithHint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/x24dp"
                            android:layout_marginTop="@dimen/register_item_margin_top"
                            android:layout_marginEnd="@dimen/x12dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:textWatcher="@{true}">

                            <com.google.android.material.textfield.TextInputEditText
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/et_account_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName"
                                android:text="@={accountnameStr}"
                                validation:isRequired="@{true}" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/account_balance"
                        app:layout_constraintTop_toBottomOf="@id/account_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center"
                            android:text="Account Balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_account_balance_container"
                            style="@style/TextInputLayout.TransparentWithHint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/x24dp"
                            android:layout_marginTop="@dimen/register_item_margin_top"
                            android:layout_marginEnd="@dimen/x12dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:textWatcher="@{true}">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_account_balance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@={accountbalanceStr}"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:inputType="number"
                                validation:isRequired="@{true}" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/account_type"
                        app:layout_constraintTop_toBottomOf="@id/account_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center"
                            android:text="Account Type              "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                        <include
                            android:layout_marginRight="5dp"
                            android:id="@+id/et_type_container"
                            layout="@layout/searchable_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:bottomEndCorner="@{@dimen/radius_default}"
                            app:bottomStartCorner="@{@dimen/radius_default}"
                            app:hint="@{@string/city}"

                            app:isRequired="@{true}"

                            app:topEndCorner="@{@dimen/radius_default}"
                            app:topStartCorner="@{@dimen/radius_default}" />
                    </LinearLayout>
                    <Button
                        android:layout_marginTop="20dp"
                        android:id="@+id/cretenew"
                        android:text="Create Account"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/account_type"
                        android:background="@drawable/bg_button_gray"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="30dp"
                        app:backgroundTint="@color/color_147eb0"
                        android:layout_marginRight="30dp"
                        android:layout_height="wrap_content"
                        />












                </androidx.constraintlayout.widget.ConstraintLayout>

            </layout>
