<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:validation="http://schemas.android.com/apk/res-auto"

    >

    <data>
        <import type="com.rinho.databinding_validation.CommonPatterns" />

        <variable
            name="isLoading"
            type="Boolean" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/rootContainer"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
<TextView
    android:textSize="@dimen/txt_medium"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/select_account"/>
    <RadioGroup
android:layout_marginTop="20dp"
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            tools:ignore="MissingConstraints">

        </RadioGroup>
        <LinearLayout

            app:layout_constraintTop_toBottomOf="@id/beneficiary"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:ignore="MissingConstraints">
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/accept"
                android:text="@string/Assign_account1"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_button_gray"
                android:layout_width="0dp"
                android:layout_marginLeft="30dp"
                app:backgroundTint="@color/color_147eb0"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                />
            <Button
                android:layout_width="0dp"
                android:layout_marginTop="20dp"
                android:id="@+id/cancel"
                android:text="@string/cancel"
                android:gravity="center"

                android:background="@drawable/bg_button_gray"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                app:backgroundTint="@color/color_147eb0"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>






        <include
            android:id="@+id/loading_state1"
            layout="@layout/state_loading"
            android:visibility="gone"
            app:isLoading="@{isLoading}" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>