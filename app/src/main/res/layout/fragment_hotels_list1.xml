<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:validation="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="androidx.lifecycle.LiveData" />



        <import type="kotlin.jvm.functions.Function0" />
        <import type="com.rinho.databinding_validation.CommonPatterns" />
        <import type="kotlin.Unit" />
        <import type="androidx.lifecycle.MutableLiveData" />


        <variable
            name="hotelDetails"
            type="com.rinho.payment.models.Details1" />



    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingClass">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">


            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@drawable/rounded_toolbar"
                android:elevation="@dimen/shadow_default"

                app:layout_constraintTop_toTopOf="parent"

                android:backgroundTint="@color/color_orange"

                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:title="التفاصيل"
                app:titleTextColor="@android:color/white"

                />

            <LinearLayout

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/account_name"

                tools:ignore="MissingConstraints">





                <TextView


                   


                    android:id="@+id/et_account_name"

                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_4f4f4f"
                    android:textSize="@dimen/txt_medium"
                    tools:text=" دعم البلديات الفرعية في معالجة التشوه ( التلوث ) البصري بمدينة جدة"

                    android:text="@{hotelDetails.department}"
                    validation:isRequired="@{true}" >

                </TextView>
                <TextView

                    android:textStyle="bold"
                    android:textSize="@dimen/txt_medium"
                    android:textColor="@color/color_147eb0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="القسم "
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/account_balance"
                app:layout_constraintTop_toBottomOf="@id/account_name"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <TextView


                    android:id="@+id/et_account_balance"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_4f4f4f"
                    android:textSize="@dimen/txt_medium"
                    tools:text=" دعم البلديات الفرعية في معالجة التشوه ( التلوث ) البصري بمدينة جدة"
                    android:text="@{hotelDetails.provision}"

                     />

                <TextView

                    android:textStyle="bold"
                    android:textSize="@dimen/txt_medium"
                    android:textColor="@color/color_147eb0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المخصص"
                    >

                </TextView>

                <!--            </com.google.android.material.textfield.TextInputLayout>-->

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/date"
                app:layout_constraintTop_toBottomOf="@id/account_balance"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <!--            <com.google.android.material.textfield.TextInputLayout-->
                <!--                android:id="@+id/et_account_balance_container"-->
                <!--                style="@style/TextInputLayout.TransparentWithHint"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginStart="@dimen/x24dp"-->
                <!--                android:layout_marginTop="@dimen/register_item_margin_top"-->
                <!--                android:layout_marginEnd="@dimen/x12dp"-->
                <!--                app:layout_constraintEnd_toEndOf="parent"-->
                <!--                app:layout_constraintStart_toStartOf="parent"-->
                <!--                app:layout_constraintTop_toTopOf="parent"-->
                <!--                app:textWatcher="@{true}">-->

                <TextView
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_4f4f4f"
                    android:textSize="@dimen/txt_medium"
                    tools:text=" دعم البلديات الفرعية في معالجة التشوه ( التلوث ) البصري بمدينة جدة"
                    app:format="@{`yyyy-MM-dd HH:mm:ss`}"
                    app:time="@{hotelDetails.date}"

                    android:layout_marginLeft="20dp"
                    android:id="@+id/et_date1"

                    android:text="@{hotelDetails.date}"

                   />
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_medium"
                    android:textColor="@color/color_147eb0"

                    android:text="تاريخ الطلب"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <!--            </com.google.android.material.textfield.TextInputLayout>-->

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/amount"
                app:layout_constraintTop_toBottomOf="@id/date"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">



                <TextView
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_4f4f4f"
                    android:textSize="@dimen/txt_medium"
                    tools:text=" دعم البلديات الفرعية في معالجة التشوه ( التلوث ) البصري بمدينة جدة"


                    android:layout_marginLeft="20dp"
                    android:id="@+id/et_amount"

                    android:text="@{String.valueOf(hotelDetails.amount)}"


                    />

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_medium"
                    android:textColor="@color/color_147eb0"

                    android:text="المبلغ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/limit"
                app:layout_constraintTop_toBottomOf="@id/amount"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <TextView

                    android:layout_marginLeft="20dp"
                    android:id="@+id/et_limit"

                    android:text="@{String.valueOf(hotelDetails.limit)}"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_4f4f4f"
                    android:textSize="@dimen/txt_medium"
                    tools:text=" دعم البلديات الفرعية في معالجة التشوه ( التلوث ) البصري بمدينة جدة" />

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_medium"
                    android:textColor="@color/color_147eb0"
                    android:lines="2"
                    android:singleLine="false"
                    android:text="الحد الائتماني \n للعهدة"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/balance"
                app:layout_constraintTop_toBottomOf="@id/limit"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">



                <TextView

                    android:layout_marginLeft="20dp"
                    android:id="@+id/et_balance"

                    android:text="@{String.valueOf(hotelDetails.balance)}"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_4f4f4f"
                    android:textSize="@dimen/txt_medium"
                    tools:text=" دعم البلديات الفرعية في معالجة التشوه ( التلوث ) البصري بمدينة جدة" />

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_medium"
                    android:textColor="@color/color_147eb0"

                    android:text="رصيد المخصص"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/desc"
                app:layout_constraintTop_toBottomOf="@id/balance"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">


                <TextView



                    android:layout_marginLeft="20dp"
                    android:id="@+id/et_desc"

                    android:text="@{hotelDetails.desc}"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_4f4f4f"
                    android:textSize="@dimen/txt_medium"
                    tools:text=" دعم البلديات الفرعية في معالجة التشوه ( التلوث ) البصري بمدينة جدة" />

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_medium"
                    android:textColor="@color/color_147eb0"

                    android:text="الوصف"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/paytype"
                app:layout_constraintTop_toBottomOf="@id/desc"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <TextView

                    android:layout_marginLeft="20dp"
                    android:id="@+id/et_paytype"

                    android:text="@{hotelDetails.paytype}"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_4f4f4f"
                    android:textSize="@dimen/txt_medium"
                    tools:text=" دعم البلديات الفرعية في معالجة التشوه ( التلوث ) البصري بمدينة جدة" />

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_medium"
                    android:textColor="@color/color_147eb0"

                    android:text="نوع السداد"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/status"
                app:layout_constraintTop_toBottomOf="@id/paytype"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <TextView

                    android:layout_marginLeft="20dp"
                    android:id="@+id/et_status"

                    android:text="@{hotelDetails.status}"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_4f4f4f"
                    android:textSize="@dimen/txt_medium"
                    tools:text=" دعم البلديات الفرعية في معالجة التشوه ( التلوث ) البصري بمدينة جدة" />

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_medium"
                    android:textColor="@color/color_147eb0"

                    android:text="الحاله"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/beneficiary"
                app:layout_constraintTop_toBottomOf="@id/status"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <TextView

                    android:layout_marginLeft="20dp"
                    android:id="@+id/et_provision"

                    android:text="@{String.valueOf(hotelDetails.beneficiary)}"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_4f4f4f"
                    android:textSize="@dimen/txt_medium"
                    tools:text=" دعم البلديات الفرعية في معالجة التشوه ( التلوث ) البصري بمدينة جدة"/>

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_medium"
                    android:textColor="@color/color_147eb0"

                    android:text="المستفيد"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:id="@+id/account_type"
                app:layout_constraintTop_toBottomOf="@id/account_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center"
                    android:text="Account Type              "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <include
                    android:layout_marginRight="5dp"
                    android:id="@+id/et_type_container"
                    layout="@layout/searchable_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bottomEndCorner="@{@dimen/radius_default}"
                    app:bottomStartCorner="@{@dimen/radius_default}"
                    app:hint="@{@string/city}"

                    app:isRequired="@{true}"

                    app:topEndCorner="@{@dimen/radius_default}"
                    app:topStartCorner="@{@dimen/radius_default}" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear1"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/beneficiary"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:ignore="MissingConstraints">
                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/cretenew"
                    android:text="@string/Assign_account"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_gray"
                    android:layout_width="0dp"
                    android:layout_marginLeft="30dp"
                    app:backgroundTint="@color/color_orange"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/cretenew1"
                    android:text="@string/cancel"
                    android:gravity="center"

                    android:background="@drawable/bg_button_gray"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    app:backgroundTint="@color/color_orange"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>